generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int                 @id @default(autoincrement())
  slug        String              @unique
  translations CategoryTranslation[]
  products    Product[]
}

model CategoryTranslation {
  id          Int      @id @default(autoincrement())
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  language    String
  name        String

  @@unique([categoryId, language])
}

model Product {
  id          Int                 @id @default(autoincrement())
  categoryId  Int
  category    Category            @relation(fields: [categoryId], references: [id])
  price       Int                 // Price in cents
  containsGluten Boolean          @default(false)
  containsLactose Boolean         @default(false)
  containsNuts Boolean            @default(false)
  isVegetarian Boolean            @default(false)
  isVegan      Boolean            @default(false)
  translations ProductTranslation[]
}

model ProductTranslation {
  id          Int      @id @default(autoincrement())
  productId   Int
  product     Product  @relation(fields: [productId], references: [id])
  language    String
  name        String
  description String?

  @@unique([productId, language])
}

model Feedback {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String?
  message   String
  createdAt DateTime @default(now())
}

model Allergen {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  translations AllergenTranslation[]
}

model AllergenTranslation {
  id          Int      @id @default(autoincrement())
  allergenId  Int
  allergen    Allergen @relation(fields: [allergenId], references: [id])
  language    String
  name        String
  description String?

  @@unique([allergenId, language])
}
